<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.AI_Customizing.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border"
    android:orientation="horizontal"
    android:padding="0dp"
    android:theme="@style/Theme.AI_Customizing.AppWidgetContainer"
    tools:ignore="ExtraText">

    <!--공백을 채우기 위한 레이아웃 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.3"/>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="2">

            <!-- ImageView: 어플 아이콘 크기 조정 -->
            <ImageView
                android:id="@+id/appwidget_imageView1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:contentDescription="@string/appString"
                android:src="@color/black"
                android:layout_weight="8" />

            <!-- TextView: 어플명 텍스트 크기 조정 및 이미지 아래에 배치 -->
            <TextView
                android:id="@+id/appwidget_text1"
                style="@style/Widget.AI_Customizing.AppWidget.InnerView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@android:color/transparent"
                android:padding="0dp"
                android:text="@string/appwidget_text"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_weight="2"
                android:gravity="center"
                android:singleLine="true"/>

    </LinearLayout>

    <!--공백을 채우기 위한 레이아웃 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="2"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/appwidget_imageView2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:contentDescription="@string/appString"
            android:src="@color/black"
            android:layout_weight="8"/>

        <!-- TextView: 어플명 텍스트 크기 조정 및 이미지 아래에 배치 -->
        <TextView
            android:id="@+id/appwidget_text2"
            style="@style/Widget.AI_Customizing.AppWidget.InnerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@android:color/transparent"
            android:padding="0dp"
            android:text="@string/appwidget_text"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:gravity="center"
            android:singleLine="true"/>

    </LinearLayout>

    <!--공백을 채우기 위한 레이아웃 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="2">

        <ImageView
            android:id="@+id/appwidget_imageView3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="1dp"
            android:contentDescription="@string/appString"
            android:src="@color/black"
            android:layout_weight="8"/>

        <!-- TextView: 어플명 텍스트 크기 조정 및 이미지 아래에 배치 -->
        <TextView
            android:id="@+id/appwidget_text3"
            style="@style/Widget.AI_Customizing.AppWidget.InnerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
           android:background="@android:color/transparent"
            android:padding="0dp"
            android:text="@string/appwidget_text"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:layout_weight="2"
            android:gravity="center"
            android:singleLine="true"/>

    </LinearLayout>

    <!--공백을 채우기 위한 레이아웃 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="end">
al
        <ImageView
            android:id="@+id/appwidget_imageView4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="1dp"
            android:contentDescription="@string/appString"
            android:src="@color/black"
            android:layout_weight="8"/>

        <!-- TextView: 어플명 텍스트 크기 조정 및 이미지 아래에 배치 -->
        <TextView
            android:id="@+id/appwidget_text4"
            style="@style/Widget.AI_Customizing.AppWidget.InnerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@android:color/transparent"
            android:padding="0dp"
            android:text="@string/appwidget_text"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:layout_weight="2"
            android:gravity="center"
            android:singleLine="true"/>

    </LinearLayout>

    <!--공백을 채우기 위한 레이아웃 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.3"/>
</LinearLayout>
